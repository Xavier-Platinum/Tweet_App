<div class="main users-new">
    <div class="container">
      <div class="form-heading">Sign up</div>
      <div class="form users-form">
        <div class="form-body">
          <%= form_tag("/users/create") do %>
            <p>Name</p>
            <input name="name">
            <p>Email</p>
            <input name="email">
            <input type="submit" value="Sign up">
          <% end %>
        </div>
      </div>
    </div>
  </div>